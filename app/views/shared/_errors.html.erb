<% if obj.errors.any? %>
  <% count = obj.errors.count %>
  <div class='alert alert-danger'>
    Please fix the following <%=pluralize(count, 'error') %>:
    <br><br>
    <ul>
    <% obj.errors.full_messages.each do |msg| %>
      <li>
        <%= msg %>
      </li>
    <% end %>
    </ul>
  </div>
<% end %>
