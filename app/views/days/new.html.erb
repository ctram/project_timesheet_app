<%= render '/shared/errors', obj: @day %>


<b style='font-size:200%'><%= @user.username %></b>
<br>
Create a new day for the month of
<%= @month.name %> <%= @month.year %>

<br><br>
<%= form_for @day, url: user_month_days_path do |f| %>
  <%= f.label :Date %>
  <br>
  <%= f.text_field :name %>
  <%= f.submit 'Submit', class:'btn btn-success' %>
<% end %>
